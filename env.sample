
# ----------------------------
# OpenAI (AI Assistance)
# ----------------------------
# Required for:
# - GET /api/aiAssistance/session
# - POST /api/aiAssistance/responses
OPENAI_API_KEY=
OPENAI_API_URL=
OPENAI_MODEL=

# ----------------------------
# SMTP (Contact form + OTP email)
# ----------------------------
# Required for:
# - POST /api/contact
# - POST /api/otp/send
SMTP_HOST=
SMTP_PORT=
# true/false
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Optional (recommended)
# From address used for outgoing emails (defaults to SMTP_USER)
SMTP_FROM=

# Optional (advanced)
# TLS cert verification. Keep true in production.
# Set to false only if your SMTP provider uses a self-signed certificate.
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Optional
# Admin recipient for contact submissions (defaults to SMTP_FROM)
CONTACT_TO=

